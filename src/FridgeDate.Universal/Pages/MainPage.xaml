<Page
    x:Class="FridgeDate.Universal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FridgeDate.Universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="300">
            <TextBlock Text="Name"></TextBlock>
            <TextBox x:Name="tbName"></TextBox>
            <TextBlock Text="Shelf life in days"></TextBlock>
            <TextBox x:Name="tbShelfLife"></TextBox>
            <Button x:Name="btnCreate" Margin="10" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center" Click="btnCreate_Click">Create</Button>
        </StackPanel>
    </Grid>
</Page>
